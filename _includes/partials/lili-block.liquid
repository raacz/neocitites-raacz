{% assign en_slug = fileSlug | append: "_en" %}

{% assign en_item = collections.all | where_exp: "i", "i.fileSlug == en_slug" | first %}


<div class="lili">
  <h1>{{ title }}</h1>


<figure>
<img alt="{{ alt }}" src="{{ media }}">
<figcaption>
  <p><span class="caption">{{ alt }}</span> <a href="{{ external }}">{{ name }} by {{ source }}</a></p>

</figcaption>
</figure>

    
  <div class="lili-text">
    <div class="tok">{{ content }}</div>
    {% if en_item %}
    <div class="en">
    {{ en_item.content }}
    </div>
  </div>
  {% endif %}
</div>


       
